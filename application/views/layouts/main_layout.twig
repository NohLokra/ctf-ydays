<!DOCTYPE html>
<html lang="fr" >
  <head>
    <title>{{ title }}</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bower_components/tether/dist/css/tether.min.css">
    <link rel="stylesheet" href="/assets/dist/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="/bower_components/font-awesome/css/font-awesome.min.css">

		{% block styles %}{% endblock %}
  </head>
  <body>
    <nav class="navbar navbar-expand-md">
      <button class="navbar-toggler navbar-toggler-right my-2" type="button" data-toggle="collapse" data-target="#main-navbar" aria-controls="main-navbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="/">YDays CTF</a>

      <div class="collapse navbar-collapse" id="main-navbar">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item" data-page="home">
            <a class="nav-link" href="/">Accueil</a>
          </li>
          <li class="nav-item dropdown" data-page="challenges">
            <a class="nav-link dropdown-toggle" href="/challenges" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-page="challenges">
              Challenges
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              {% for category in categories %}
                <a class="dropdown-item" href="/challenges/{{ category.slug }}" data-page="{{ category.slug }}">{{ category.label }}</a>
              {% endfor %}
              <!-- <a class="dropdown-item" href="/challenges/crack" data-page="crack">Crack</a>
              <a class="dropdown-item" href="/challenges/infra-reseau" data-page="infra-reseau">Infra / RÃ©seaux</a>
              <a class="dropdown-item" href="/challenges/programmation" data-page="programmation">Programmation</a>
              <a class="dropdown-item" href="/challenges/shell" data-page="shell">Shell</a>
              <a class="dropdown-item" href="/challenges/web-serveur" data-page="web-serveur">Web Serveur</a>
              <a class="dropdown-item" href="/challenges/web-client" data-page="web-client">Web Client</a> -->
            </div>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item" data-page="profil">
            <a class="nav-link" href="#"><i class="fa fa-user"></i> Mon profil</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
      {% block body %}
      {% endblock %}
    </div>

    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/tether/dist/js/tether.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    <script>
      var $activeTab = $('[data-page={{ page }}]');
      $activeTab.addClass('active');

      if ( $activeTab.hasClass('dropdown-item') ) {
        var $listItem = $activeTab.closest('li');
        $listItem.addClass('active');
      }
    </script>
    {% block javascript %}
    {% endblock %}

    {% for script in scripts %}
      <script src="/assets/dist/js/{{ script }}"></script>
    {% endfor %}
	</body>
</html>
